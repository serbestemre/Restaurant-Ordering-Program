<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainScreen" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="restCheque.MainScreenController">
    <center>
        <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" hmax="0.0">
            <content>
                <VBox fx:id="vBox" spacing="10.0" style="-fx-border-color: green;" />
            </content>
        </ScrollPane>
    </center>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="CENTER">
                    <children>
                        <Label text="FLORYALI RESTAURANT">
                            <font>
                                <Font name="System Bold" size="15.0" />
                            </font>
                        </Label>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>
                <VBox alignment="BOTTOM_CENTER" spacing="5.0" VBox.vgrow="SOMETIMES">
                    <children>
                        <Button fx:id="btnEkle" mnemonicParsing="false" onAction="#addNewTable" prefHeight="50.0" prefWidth="170.0" text="Create Table" wrapText="true">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" onMouseClicked="#addNewTable" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/add_green.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="btnSil" layoutX="15.0" layoutY="20.0" mnemonicParsing="false" onAction="#masaSil" prefHeight="50.0" prefWidth="170.0" text="Delete Table">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/delete.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="btnEkle1" layoutX="15.0" layoutY="500.0" mnemonicParsing="false" onAction="#addNewTable" prefHeight="50.0" prefWidth="170.0" text="Cheque Transfer" wrapText="true">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" onMouseClicked="#addNewTable" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/money-transfer.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                        <Button fx:id="btnEkle11" layoutX="15.0" layoutY="523.0" mnemonicParsing="false" onAction="#addNewTable" prefHeight="50.0" prefWidth="170.0" text="Payment">
                            <graphic>
                                <ImageView fitHeight="30.0" fitWidth="30.0" onMouseClicked="#addNewTable" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../icons/icon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                    <padding>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="10.0" />
                    </padding>
                </VBox>
            </children>
        </VBox>
    </left>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Products">
                    <items>
                        <MenuItem fx:id="menuItemProdcuts" mnemonicParsing="false" onAction="#showProductDialogPane" text="Products" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="menuItemMenu" mnemonicParsing="false" onAction="#showMenuDialogPane" text="Menu" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
