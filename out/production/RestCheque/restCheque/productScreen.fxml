<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<DialogPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <content>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <left>
            <VBox spacing="10.0" BorderPane.alignment="CENTER">
               <children>
                  <TableView minHeight="400.0">
                    <columns>
                      <TableColumn prefWidth="75.0" text="ID" />
                      <TableColumn prefWidth="75.0" text="NAME" />
                        <TableColumn prefWidth="75.0" text="COST" />
                        <TableColumn prefWidth="75.0" text="AMOUNT" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox spacing="5.0">
                     <children>
                        <TextField promptText="Enter Name" />
                        <TextField layoutX="10.0" layoutY="10.0" promptText="Enter Cost" />
                        <TextField layoutX="197.0" layoutY="10.0" promptText="Enter Amount" />
                     </children>
                  </HBox>
                  <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="154.0" spacing="5.0">
                     <children>
                        <Button mnemonicParsing="false" text="Create" />
                        <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" text="Edit" />
                        <Button layoutX="78.0" layoutY="10.0" mnemonicParsing="false" text="Delete" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </content>
</DialogPane>
