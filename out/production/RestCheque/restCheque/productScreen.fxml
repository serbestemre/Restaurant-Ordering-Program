<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<DialogPane xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="restCheque.ProductScreenController">
   <content>
      <BorderPane prefHeight="200.0" prefWidth="200.0">
         <left>
            <VBox spacing="5.0" BorderPane.alignment="CENTER">
               <children>
                  <VBox>
                     <children>
                        <TableView fx:id="tableViewProduct" minHeight="400.0">
                          <columns>
                            <TableColumn prefWidth="75.0" text="ID">
                                 <cellValueFactory>
                                <PropertyValueFactory property="productID" />
                            </cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="75.0" text="NAME">
                                 <cellValueFactory>
                                <PropertyValueFactory property="productName" />
                            </cellValueFactory>
                            </TableColumn>
                              <TableColumn prefWidth="75.0" text="COST">
                                  <cellValueFactory>
                                      <PropertyValueFactory property="productCost" />
                                  </cellValueFactory>
                              </TableColumn>
                              <TableColumn prefWidth="75.0" text="AMOUNT">
                                 <cellValueFactory>
                                  <PropertyValueFactory property="productAmount" />
                              </cellValueFactory>
                              </TableColumn>
                          </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <tooltip>
                              <Tooltip text="Product List" />
                           </tooltip>
                        </TableView>
                        <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308" prefHeight="9.0" prefWidth="571.0" progress="0.0" visible="false">
                           <VBox.margin>
                              <Insets top="2.0" />
                           </VBox.margin>
                        </ProgressBar>
                     </children>
                  </VBox>
                  <HBox spacing="5.0">
                     <children>
                        <TextField fx:id="tfName" promptText="Enter Name">
                           <tooltip>
                              <Tooltip text="Enter Name of Product" />
                           </tooltip></TextField>
                        <TextField fx:id="tfCost" layoutX="10.0" layoutY="10.0" promptText="Enter Cost">
                           <tooltip>
                              <Tooltip text="Enter Cost Of Product Exp: 3.42" />
                           </tooltip></TextField>
                        <TextField fx:id="tfAmount" layoutX="197.0" layoutY="10.0" promptText="Enter Amount (gr/unit)">
                           <tooltip>
                              <Tooltip text="Enter Amount Gr / Unit" />
                           </tooltip></TextField>
                     </children>
                  </HBox>
                  <VBox spacing="5.0">
                     <children>
                        <HBox alignment="TOP_RIGHT" spacing="5.0">
                           <children>
                              <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#createNewProduct" prefWidth="70.0" text="Create">
                                 <tooltip>
                                    <Tooltip text="Create New Product" />
                                 </tooltip>
                              </Button>
                              <Button fx:id="btnEdit" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#editProduct" prefWidth="70.0" text="Edit">
                                 <tooltip>
                                    <Tooltip text="Edit Selected Product" />
                                 </tooltip>
                              </Button>
                              <Button fx:id="btnDelete" layoutX="78.0" layoutY="10.0" mnemonicParsing="false" onAction="#deleteProduct" prefWidth="70.0" text="Delete">
                                 <tooltip>
                                    <Tooltip text="Delete Selected Product" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                        <HBox alignment="TOP_RIGHT" layoutX="10.0" layoutY="10.0" spacing="5.0">
                           <children>
                              <Button fx:id="btnUpdate" onAction="#btnUpdate" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" prefWidth="70.0" text="Update" visible="false">
                                 <tooltip>
                                    <Tooltip text="Edit Selected Product" />
                                 </tooltip>
                              </Button>
                              <Button fx:id="btnCancel" onAction="#btnCancel" layoutX="78.0" layoutY="10.0" mnemonicParsing="false" prefWidth="70.0" text="Cancel" visible="false">
                                 <tooltip>
                                    <Tooltip text="Delete Selected Product" />
                                 </tooltip>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </left>
      </BorderPane>
   </content>
</DialogPane>
